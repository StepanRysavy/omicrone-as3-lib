package com.omicrone {		import flash.display.Loader;	import flash.display.LoaderInfo;	import flash.display.Bitmap;		public class ImageMeta {				private var _loadInit:Boolean;		private var _loadDone:Boolean;		private var _loadBytes:Number;		private var _loadTotal:Number;		private var _id:uint;		private var _name:String;		private var _link:String;		private var _image:Loader;				public function ImageMeta(id:uint, link:String, name:String = null) {			_loadInit = false;			_loadDone = false;			_loadBytes = 0;			_loadTotal = 0;						_id = id;			_name = name;			_link = link;						_image = new Loader();						Log.add("založen nový obrázek: " + _link, "ImageMeta:" + _id);		}				// gets				public function get loadInit ():Boolean {			return _loadInit;		}				public function get loadDone ():Boolean {			return _loadDone;		}				public function get loadBytes ():Number {			return _loadBytes;		}				public function get loadTotal ():Number {			return _loadTotal;		}				public function get loadPercent ():Number {			return Math.round(_loadBytes / _loadTotal * 100) / 100;		}				public function get id ():uint {			return _id;		}				public function get name ():String {			return _name;		}				public function get link ():String {			return _link;		}				public function get image ():Loader {			return _image;		}				// sets				public function set loadBytes (i:Number):void {			_loadBytes = i;		}				public function set loadTotal (i:Number):void {			_loadTotal = i;		}					// publics					public function init ():void {			_loadInit = true;			Log.add("obrázek se načítá", "ImageMeta:" + _id);		}				public function loaded ():void {			_loadDone = true;				Log.add("obrázek načten", "ImageMeta:" + _id);		}				public function destroy ():void {			var li:LoaderInfo = _image.contentLoaderInfo;			if(li.childAllowsParent && li.content is Bitmap){				(li.content as Bitmap).bitmapData.dispose(); // remove bitmap from memory			}		}	}}